{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Chat application using Angular + Firebase",
  "repository": {
    "type": "git",
    "url": "https://github.com/TarasMoskovych/messenger"
  },
  "author": {
    "name": "Taras Moskovych",
    "email": "moskovych.taras@gmail.com"
  },
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "ng build --base-href ./ && npm run electron:serve",
    "electron:serve": "electron .",
    "package": "ng build --prod --base-href ./ && electron-packager . messenger --icon=resources/icon.png --overwrite --asar=true --no-prune --out=builds",
    "package:debian": "npm run package && electron-installer-debian --config build.debian.json",
    "package:windows": "npm run package && node build.windows.js",
    "deploy": "firebase login && ng build --prod && firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.2.3",
    "@angular/cdk": "^8.1.4",
    "@angular/common": "~8.2.3",
    "@angular/compiler": "~8.2.3",
    "@angular/core": "~8.2.3",
    "@angular/fire": "^5.2.3",
    "@angular/flex-layout": "^8.0.0-beta.26",
    "@angular/forms": "~8.2.3",
    "@angular/material": "^8.1.4",
    "@angular/platform-browser": "~8.2.3",
    "@angular/platform-browser-dynamic": "~8.2.3",
    "@angular/router": "~8.2.3",
    "@ctrl/ngx-emoji-mart": "^1.0.1",
    "@types/lodash": "^4.14.144",
    "agora-rtc-sdk": "^2.9.0",
    "electron-google-oauth": "^2.0.0",
    "firebase": "^7.5.0",
    "hammerjs": "^2.0.8",
    "lodash": "^4.17.15",
    "ngx-agora": "^1.5.14",
    "ngx-electron": "^2.2.0",
    "ngx-infinite-scroll": "^8.0.0",
    "ngx-lightbox": "^2.1.0",
    "ngx-skeleton-loader": "^1.2.2",
    "randomatic": "^3.1.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.0",
    "@angular/cli": "^8.3.15",
    "@angular/compiler-cli": "~8.2.3",
    "@angular/language-service": "~8.2.3",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "electron": "^7.1.1",
    "electron-installer-debian": "^2.0.1",
    "electron-packager": "^14.1.0",
    "electron-winstaller": "^4.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
